<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.odde.bbuddy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BbuddyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".authentication.view.AuthenticateActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".account.view.AddAccountActivity" />
        <activity android:name=".account.view.EditDeleteAccountActivity" />
        <activity android:name=".account.view.AddBudgetActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>